<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:extensions="clr-namespace:ShadUI.Extensions"
    xmlns:shadui="clr-namespace:ShadUI.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border MinHeight="600" Padding="24">
            <shadui:Card HasShadow="True" VerticalAlignment="Center">
                <shadui:Card.Header>
                    <StackPanel>
                        <shadui:CardTitle>Create project</shadui:CardTitle>
                        <shadui:CardDescription>Deploy your new project in one-click.</shadui:CardDescription>
                    </StackPanel>
                </shadui:Card.Header>
                <StackPanel Spacing="16">
                    <TextBox Watermark="Name of your project" extensions:ControlAssist.Label="Name" />
                    <ComboBox
                        SelectedIndex="0"
                        Width="300"
                        extensions:ControlAssist.Label="Framework">
                        <ComboBox.Items>
                            <ComboBoxItem>Next.js</ComboBoxItem>
                            <ComboBoxItem>React</ComboBoxItem>
                            <ComboBoxItem>Vue.js</ComboBoxItem>
                            <ComboBoxItem>Angular</ComboBoxItem>
                        </ComboBox.Items>
                    </ComboBox>
                </StackPanel>
                <shadui:Card.Footer>
                    <DockPanel>
                        <Button
                            Classes="Outline"
                            HorizontalAlignment="Left"
                            Margin="0,20,0,0">
                            Cancel
                        </Button>
                        <Button
                            Classes="Primary"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                            Deploy
                        </Button>
                    </DockPanel>
                </shadui:Card.Footer>
            </shadui:Card>
        </Border>
    </Design.PreviewWith>

    <ControlTheme TargetType="{x:Type shadui:Card}" x:Key="CardControlTheme">
        <Setter Property="Padding" Value="24" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Background" Value="{DynamicResource CardBackgroundColor}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}" />
        <Setter Property="CornerRadius" Value="{DynamicResource XlCornerRadius}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border Margin="{TemplateBinding Margin}" Name="PART_OuterBorder">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Name="PART_Container">
                            <StackPanel Margin="{TemplateBinding Padding}">
                                <ContentPresenter
                                    Content="{TemplateBinding Header}"
                                    IsVisible="{TemplateBinding Header, Converter={x:Static ObjectConverters.IsNotNull}}"
                                    Margin="0,0,0,24" />
                                <ContentPresenter Content="{TemplateBinding Content}" />
                                <ContentPresenter
                                    Content="{TemplateBinding Footer}"
                                    IsVisible="{TemplateBinding Footer, Converter={x:Static ObjectConverters.IsNotNull}}"
                                    Margin="0,24,0,0" />
                            </StackPanel>
                        </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style Selector="^[HasShadow=True]">
            <Style Selector="^ /template/ Border#PART_Container">
                <Setter Property="BoxShadow" Value="0 2 4 0 #20000000" />
            </Style>
            <Style Selector="^ /template/ Border#PART_OuterBorder">
                <Setter Property="Padding" Value="2,0,2,4" />
            </Style>
        </Style>
    </ControlTheme>

    <ControlTheme TargetType="{x:Type shadui:Card}" x:Key="AcrylicCardControlTheme">
        <Setter Property="Padding" Value="24" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Background" Value="{DynamicResource CardBackgroundColor}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}" />
        <Setter Property="CornerRadius" Value="{DynamicResource XlCornerRadius}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border Name="PART_OuterBorder" Margin="{TemplateBinding Margin}">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                            <ExperimentalAcrylicBorder Name="PART_Container" CornerRadius="{TemplateBinding CornerRadius}">
                                <ExperimentalAcrylicBorder.Material>
                                    <ExperimentalAcrylicMaterial
                                        BackgroundSource="Digger"
                                        TintOpacity="{TemplateBinding TintOpacity}"
                                        MaterialOpacity="{TemplateBinding AcrylicOpacity}"
                                        FallbackColor="{DynamicResource CardBackgroundColor}"
                                        TintColor="{DynamicResource CardBackgroundColor}" />
                                </ExperimentalAcrylicBorder.Material>

                                <StackPanel Margin="{TemplateBinding Padding}">
                                    <ContentPresenter
                                        Margin="0,0,0,24"
                                        Content="{TemplateBinding Header}"
                                        IsVisible="{TemplateBinding Header, Converter={x:Static ObjectConverters.IsNotNull}}" />
                                    <ContentPresenter Content="{TemplateBinding Content}" />
                                    <ContentPresenter
                                        Margin="0,24,0,0"
                                        Content="{TemplateBinding Footer}"
                                        IsVisible="{TemplateBinding Footer, Converter={x:Static ObjectConverters.IsNotNull}}" />
                                </StackPanel>
                            </ExperimentalAcrylicBorder>
                        </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style Selector="^[HasShadow=True]">
            <Style Selector="^ /template/ Border#PART_Container">
                <Setter Property="BoxShadow" Value="0 2 4 0 #20000000" />
            </Style>
            <Style Selector="^ /template/ Border#PART_OuterBorder">
                <Setter Property="Padding" Value="2,0,2,4" />
            </Style>
        </Style>
    </ControlTheme>

</ResourceDictionary>