<Styles
    x:Class="ShadUI.Themes.ShadTheme"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:themes="clr-namespace:ShadUI.Themes">
    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://ShadUI/Controls/Index.axaml" />
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceInclude Source="/Themes/Light.axaml" x:Key="Light" />
                <ResourceInclude Source="/Themes/Dark.axaml" x:Key="Dark" />
                <ResourceInclude Source="/Themes/AcrylicLight.axaml" x:Key="{x:Static themes:ThemeVariants.AcrylicLight}" />
                <ResourceInclude Source="/Themes/AcrylicDark.axaml" x:Key="{x:Static themes:ThemeVariants.AcrylicDark}" />
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Styles.Resources>
    <StyleInclude Source="avares://ShadUI/Styles/Index.axaml" />
</Styles>